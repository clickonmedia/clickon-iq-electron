{
  "name": "iqworkflow",
  "productName": "IQ Workflow",
  "version": "1.0.1",
  "description": "IQ Workflow",
  "main": "main.js",
  "repository": "https://github.com/clickonmedia/clickon-iq-electron",
  "scripts": {
    "start:control": "npx babel renderer/control.jsx --out-file renderer/control-compiled.js",
    "start": "electron-forge start --inspect-electron",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-linux": "electron-forge make --platform linux",
    "make-mac": "electron-forge make --platform darwin",
    "make-win": "electron-forge make --platform win32",
    "build-and-sign": "node build-and-sign.js",
    "build": "node build.js",
    "increment-version": "versiony package.json --patch && git add . && git commit -m 'new version'",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl",
    "dist-linux-snap": "electron-builder --linux snap",
    "build-and-publish": "electron-builder --linux appimage --win nsis --linux snap"
  },
  "build": {
    "appId": "iqworkflow",
    "publish": [
      {
        "provider": "github",
        "private": false,
        "releaseType": "release"
      }
    ],
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "library/browserLikeWindow/assets/appicon.icns",
      "sign": false
    },
    "linux": {
      "executableName": "iqworkflow",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "library/browserLikeWindow/assets/appicon.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "library/browserLikeWindow/assets/appicon.ico"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist"
    },
    "snap": {
      "publish": {
        "provider": "snapStore",
        "channels": [
          "stable"
        ]
      },
      "grade": "stable"
    },
    "afterSign": "notarize.js"
  },
  "author": "CLICKON Media <salimahammed.openwebsolutions.in>",
  "license": "ISC",
  "files": [
    "library/browserLikeWindow/index.js",
    "renderer/js/useConnect.js",
    "renderer/js/control.js"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.66",
    "classnames": "^2.3.1",
    "electron": "21.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "versiony": "^2.0.1"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "url-parse": "^1.5.10"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "library/browserLikeWindow/assets/appicon",
        "asar": true,
        "name": "IQ Workflow",
        "executableName": "iqworkflow"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "clickon_iq_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "IQ Workflow",
            "icon": "library/browserLikeWindow/assets/appicon.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "IQ Workflow",
            "icon": "library/browserLikeWindow/assets/appicon.png"
          }
        }
      ]
    }
  }
}